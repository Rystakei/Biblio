
<h1>Biblio</h1>
<h2>An App Featuring Programming Books Krista Needs to Read</h2>

<br>

<div>
<h3> Total Books To Read: <%= Book.all.length %></h3>
</div>
<table>
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Subject</th>
    <th>Isbn</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.author %></td>
    <td><%= book.subject %></td>
    <td><%= book.isbn %></td>
  
    <td><%= link_to 'Show', book %></td>
    <td><%= link_to 'Edit', edit_book_path(book) %></td>
    <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

